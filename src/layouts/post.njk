---
layout: default
---

<article>
  
  <p class="date">{{ page.date.toISOString() | readableDate }}</p>

  <div class="content">
    {{ content | safe }}
  </div>

  {{ page.data.link }}

</article>

<div class="pages">
  <ul>
  {% if page.previous %}
  <li>Previous: {{ page.previous.date }} - <a href="{{ page.previous.url }}">{{ page.previous.title }}</a></li>
  {% endif %}

  {% if page.next %}
  <li>Next: {{ page.next.date }} - <a href="{{ page.next.url }}">{{ page.next.title }}</a>
  </li>
  {% endif %}
  </ul>
</div>
