---
layout: default
---

{{ content | safe }}

<section>

{% for year, yearPosts in collections.postsByYear %}
  <h2>{{ year }}</h2>
  <ul>
    {% for post in yearPosts | reverse %}
      <li>{{ post.date.toISOString() | readableDate("LLLL d") }} - <a href="{{ post.url }}">{{ post.data.title }}</a></li>
    {% endfor %}
  </ul>
{% endfor %}

</section>