---
layout: default
---

<article>

    <p class="date">{{ page.date.toISOString() | readableDate('LLLL yyyy') }}</p>

  <div class="content">
    <ul>
      <li><strong>Tools used:</strong>
        {% set comma = joiner() %}
        {% for tool in tools -%}
          {{ comma() }} {{ tool }}
        {%- endfor %} 
      </li>
      {% if link %}
      <li><strong>Visit:</strong> <a href="{{ link }}">{{ link }}</a></li>
      {% endif %}
    </ul>

    {{ content | safe }}
  </div>
</article>

<div class="pages">
  <ul>
  {% if page.previous %}
  <li>Previous: {{ page.previous.date }} - <a href="{{ page.previous.url }}">{{ page.previous.title }}</a></li>
  {% endif %}

  {% if page.next %}
  <li>Next: {{ page.next.date }} - <a href="{{ page.next.url }}">{{ page.next.title }}</a>
  </li>
  {% endif %}
  </ul>
</div>
